<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_launch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".activities.AppLaunch">

    <TextView
        android:id="@+id/text_Version"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints,VisualLintOverlap" />

    <ImageView
        android:id="@+id/image_CPR3663"
        android:layout_width="502dp"
        android:layout_height="270dp"
        android:layout_marginTop="2dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cpr3663"
        tools:ignore="MissingConstraints,VisualLintBounds" />

    <LinearLayout
        android:layout_width="760dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_StatusOverall"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_vertical"
                tools:ignore="MissingConstraints,VisualLintBounds" />

            <TextView
                android:id="@+id/text_PercentOverall"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_vertical"
                tools:ignore="MissingConstraints,VisualLintBounds" />

            <ProgressBar
                android:id="@+id/progressBarOverall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_gravity="center"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/cpr_green">
            </ProgressBar>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_StatusFile"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="Competition Data"
                tools:ignore="MissingConstraints,VisualLintBounds" />

            <TextView
                android:id="@+id/text_PercentFile"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center_vertical"
                tools:ignore="MissingConstraints,VisualLintBounds" />

            <ProgressBar
                android:id="@+id/progressBarFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_gravity="center"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/cpr_green">
            </ProgressBar>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_Banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:rotation="-10"
        android:textColor="@color/cpr_green"
        android:textSize="72sp"
        android:textStyle="bold"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_CPR3663"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imgBut_Settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/cpr_bkgnd"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/settings_icon"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but_StartScouting"
        android:layout_width="245dp"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:text="@string/applaunch_start_scouting"
        android:textColor="@color/cpr_bkgnd"
        android:textSize="28sp"
        android:textStyle="bold"
        app:backgroundTint="@color/cpr_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Banner"
        tools:ignore="TextSizeCheck"
        app:cornerRadius="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>