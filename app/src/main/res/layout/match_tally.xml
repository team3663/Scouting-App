<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    android:id="@+id/matchTally"
    tools:context=".activities.MatchTally">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/but_MatchControl"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:drawableEnd="@drawable/start_match"
                android:text="@string/button_start_match"
                tools:textSize="18sp"
                app:cornerRadius="16dp"/>

            <TextView
                android:id="@+id/textPadding1"
                android:layout_width="10dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/but_Undo"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/dark_red"
                        android:text="@string/button_undo"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textSize="11sp"
                        app:cornerRadius="10dp"/>

                    <TextView
                        android:id="@+id/text_Status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:paddingStart="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:textSize="24sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_Team"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>
            <Switch
                android:id="@+id/switchNotMoving"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                tools:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/switch_not_moving"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding2"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switchDefended"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                tools:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/switch_is_defended"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding3"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:id="@+id/switchDefense"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/switch_on_defense"
                tools:textSize="18sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding4"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:gravity="end|center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <Chronometer
                android:id="@+id/chronometerDelay"
                android:layout_width="1dp"
                android:layout_height="65dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="890dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_SeekBarProgress"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="42sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/but_Pickup"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:text="@string/button_climb"
                        android:textSize="22sp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/light_blue"
                        app:cornerRadius="20dp"/>

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="match_parent"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/but_Climb"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:text="@string/button_pickup"
                        android:textSize="22sp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/light_blue"
                        app:cornerRadius="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:progressTint="@color/cpr_green"
                        android:thumbTint="@color/cpr_green"
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:min="0"
                        android:rotation="270"
                        android:translationX="-175dp" />

                    <FrameLayout
                        android:layout_width="830dp"
                        android:background="@color/dark_grey"
                        android:layout_height="match_parent"
                        android:translationX="-340dp">

                        <TextView
                                android:id="@+id/textRobot"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/holo_orange_dark"/>

                        <ImageView
                            android:id="@+id/image_FieldView"
                            android:layout_width="fill_parent"
                            android:scaleType="fitXY"
                            android:layout_height="fill_parent"
                            android:contentDescription="Shows the field of play"
                            app:srcCompat="@drawable/field2026"
                            tools:ignore="HardcodedText,MissingConstraints" />

                        <RelativeLayout
                            android:id="@+id/FieldTouch"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            tools:ignore="MissingConstraints,UselessLeaf" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/but_AllianceZone"
                            android:layout_width="233dp"
                            android:layout_height="fill_parent"
                            app:cornerRadius="0dp"
                            android:backgroundTint="@color/transparent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/but_NeutralZone"
                            android:layout_marginStart="234dp"
                            android:layout_width="364dp"
                            android:layout_height="fill_parent"
                            app:cornerRadius="0dp"
                            android:backgroundTint="@color/transparent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/but_OpponentZone"
                            android:layout_marginStart="597dp"
                            android:layout_width="233dp"
                            android:layout_height="fill_parent"
                            app:cornerRadius="0dp"
                            android:backgroundTint="@color/transparent" />

                        <TextView
                            android:id="@+id/text_Practice"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textColor="@color/transparent30_grey" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/but_PassTap"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/button_pass1"
                    android:textSize="19sp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/light_blue"
                    app:cornerRadius="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/but_Pass"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/button_pass"
                    android:textSize="19sp"
                    android:backgroundTint="@color/light_blue"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/but_ShootTap"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/button_shoot1"
                    android:textSize="19sp"
                    android:backgroundTint="@color/dark_green"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/but_Shoot"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/button_shoot"
                    android:textSize="19sp"
                    android:backgroundTint="@color/dark_green"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but_Back"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/cpr_bkgnd"
        android:text="@string/button_back"
        android:drawableEnd="@drawable/back_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        tools:textSize="18sp"
        app:cornerRadius="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>