<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlayGround">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_Quit"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="Quit"
                    android:backgroundTint="@color/dark_red"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/textPadding1"
                    android:layout_width="10dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="265dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/but_Undo"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="@color/dark_red"
                            android:text="@string/button_undo"
                            tools:ignore="TouchTargetSizeCheck"
                            tools:textSize="11sp" />

                        <TextView
                            android:id="@+id/text_Status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:paddingStart="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:textSize="24sp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_Team"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingStart="5dp"
                        android:gravity="start|center"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:textSize="12sp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>
                <Switch
                    android:id="@+id/switchNotMoving"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    tools:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="@string/switch_not_moving"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:id="@+id/textPadding2"
                    android:layout_width="15dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical" />

                <Switch
                    android:id="@+id/switchDefended"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    tools:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="@string/switch_is_defended"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:id="@+id/textPadding3"
                    android:layout_width="15dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"/>

                <Switch
                    android:id="@+id/switchDefense"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="@string/switch_on_defense"
                    tools:textSize="18sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:id="@+id/textPadding4"
                    android:layout_width="15dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"/>

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="70dp"
                    android:layout_height="65dp"
                    android:gravity="end|center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>

                <Chronometer
                    android:id="@+id/chronometerDelay"
                    android:layout_width="1dp"
                    android:layout_height="65dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:background="@color/dark_grey"
                android:layout_height="490dp">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_height="450dp"
                    android:layout_width="400dp"
                    android:progress="10"
                    android:min="0"
                    android:rotation="270"
                    android:translationX="-170dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.AppCompat.SeekBar.Discrete" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="701dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center_horizontal"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:translationX="100dp" />

                    <FrameLayout
                        android:layout_width="700dp"
                        android:layout_height="350dp"
                        android:translationX="100dp"
                        android:translationY="130dp">

                <TextView
                    android:id="@+id/textRobot"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/holo_orange_dark"/>

                <ImageView
                    android:id="@+id/image_FieldView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:contentDescription="Shows the field of play"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/field2026"
                    tools:ignore="HardcodedText,MissingConstraints" />

                <RelativeLayout
                    android:id="@+id/ContextMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    tools:ignore="MissingConstraints,UselessLeaf" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/text_Practice"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:textColor="@color/transparent30_grey" />
                </RelativeLayout>
                    </FrameLayout>
            </FrameLayout>
        </LinearLayout>

    <Button
        android:id="@+id/but_Shoot"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Shoot at Hub"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/but_Tap"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Tap"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/but_Shoot"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/but_Next"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/cpr_bkgnd"
        android:text="Next (2)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:textSize="18sp" />
</androidx.constraintlayout.widget.ConstraintLayout>