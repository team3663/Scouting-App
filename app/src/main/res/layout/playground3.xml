<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlayGround3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_Quit"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:text="Quit"
                android:backgroundTint="@color/dark_red"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textPadding1"
                android:layout_width="10dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but_Undo"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/dark_red"
                        android:text="@string/button_undo"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textSize="11sp" />

                    <TextView
                        android:id="@+id/text_Status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:paddingStart="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:textSize="24sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_Team"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>
            <Switch
                android:id="@+id/switchNotMoving"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                tools:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/switch_not_moving"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding2"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical" />

            <Switch
                android:id="@+id/switchDefended"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                tools:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/switch_is_defended"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding3"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:id="@+id/switchDefense"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:clickable="false"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/switch_on_defense"
                tools:textSize="18sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textPadding4"
                android:layout_width="15dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:gravity="end|center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <Chronometer
                android:id="@+id/chronometerDelay"
                android:layout_width="1dp"
                android:layout_height="65dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_100"
                    android:text="0"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_10"
                    android:text="10"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_20"
                    android:text="20"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_30"
                    android:text="30"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_40"
                    android:text="40"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_50"
                    android:text="50"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_60"
                    android:text="60"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_70"
                    android:text="70"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_80"
                    android:text="80"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_90"
                    android:text="90"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/but_0"
                    android:text="0"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_1"
                    android:text="1"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_2"
                    android:text="2"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_3"
                    android:text="3"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_4"
                    android:text="4"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_5"
                    android:text="5"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_6"
                    android:text="6"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_7"
                    android:text="7"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_8"
                    android:text="8"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/but_9"
                    android:text="9"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    style="@android:style/Widget.Button"
                    android:textSize="10sp"/>

            </LinearLayout>
        <FrameLayout
            android:layout_width="650dp"
            android:background="@color/dark_grey"
            android:layout_height="490dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:textSize="32sp"
                    android:textColor="@color/white" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp">

                    <TextView
                        android:id="@+id/textRobot"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:color/holo_orange_dark"/>

                    <ImageView
                        android:id="@+id/image_FieldView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:contentDescription="Shows the field of play"
                        app:srcCompat="@drawable/field2026"
                        tools:ignore="HardcodedText,MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/ContextMenu"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        tools:ignore="MissingConstraints,UselessLeaf" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/text_Practice"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textColor="@color/transparent30_grey" />
                    </RelativeLayout>
                </FrameLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/but_Shoot"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Shoot at Hub"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/but_Tap"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Tap"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/but_Shoot"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/but_Next"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/cpr_bkgnd"
        android:text="Next (1)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:textSize="18sp" />
</androidx.constraintlayout.widget.ConstraintLayout>