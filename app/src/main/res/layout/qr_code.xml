<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qr_code"
    android:background="@color/cpr_bkgnd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_Heading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/qr_heading"
        android:textColor="@color/cpr_green"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_Heading"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/but_PrevImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="15dp"
                            android:backgroundTint="@color/cpr_bkgnd"
                            android:gravity="center"
                            app:srcCompat="@drawable/back_button"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/text_ImagePage"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:textColor="@color/cpr_green"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="22sp" />

                        <ImageButton
                            android:id="@+id/but_NextImage"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="15dp"
                            android:backgroundTint="@color/cpr_bkgnd"
                            android:gravity="center"
                            app:srcCompat="@drawable/next_button"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_QRData"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_FileStatsCompetitionLabel"
                    android:text="@string/qr_text_file_stats_competition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_FileStatsCompetition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/cpr_green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_FileStatsMatchLabel"
                    android:text="@string/qr_text_file_stats_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_FileStatsMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/cpr_green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_FileStatsMatchTypeLabel"
                    android:text="@string/qr_text_file_stats_match_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_FileStatsMatchType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/cpr_green"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_FileStatsFileSizeLabel"
                    android:text="@string/qr_text_file_stats_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/light_grey"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_FileStatsFileSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/cpr_green"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but_Back"
        android:layout_width="175dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/qr_but_back"
        android:textSize="24sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/cpr_bkgnd"
        android:layout_gravity="start"
        tools:ignore="HardcodedText,MissingConstraints"
        app:cornerRadius="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but_Next"
        android:layout_width="175dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/qr_but_next"
        android:textSize="24sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/cpr_bkgnd"
        tools:ignore="HardcodedText,MissingConstraints"
        app:cornerRadius="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>