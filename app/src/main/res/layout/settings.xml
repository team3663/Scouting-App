<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpr_bkgnd"
    tools:context=".Settings">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/cpr_green"
        android:textSize="42sp"
        android:gravity="center"
        android:text="@string/settings_heading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Competition"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/settings_competition"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_Competition"
                android:spinnerMode="dropdown"
                android:verticalScrollbarPosition="left"
                android:scrollbarThumbVertical="@drawable/scrollbar_style"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:gravity="end|center"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/drop_down_arrow"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Device"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/settings_device"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_Device"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:gravity="end|center"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/drop_down_arrow"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ScoutingTeam"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:text="@string/settings_scouting_team"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edit_ScoutingTeam"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:autofillHints="Enter Scouting team number here"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/cpr_bkgnd"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:textSize="24sp"
            android:paddingHorizontal="20dp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/text_ScoutingTeamName"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/light_grey"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_NumMatches"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:text="@string/settings_num_files"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/edit_NumMatches"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:autofillHints="Enter Scouting team number here"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/cpr_bkgnd"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:textSize="24sp"
            android:paddingHorizontal="20dp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/text_NumMatchesPadding"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:gravity="start|center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Color"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingEnd="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="@string/settings_color"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_Color"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:gravity="end|center"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/drop_down_arrow"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

<Button
    android:id="@+id/but_Cancel"
    android:layout_width="175dp"
    android:layout_height="60dp"
    android:textSize="28sp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:textColor="@color/cpr_bkgnd"
    app:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:ignore="HardcodedText,MissingConstraints"
    android:text="Cancel" />

<Button
    android:id="@+id/but_Save"
    android:layout_width="175dp"
    android:layout_height="60dp"
    android:textSize="28sp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:textColor="@color/cpr_bkgnd"
    app:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:ignore="HardcodedText,MissingConstraints"
    android:text="Save" />

</androidx.constraintlayout.widget.ConstraintLayout>